0 ' SET THE RTC CLOCK 10/12/2025
10 INPUT"Enter current time (12 hour) Hours,Minutes,Seconds,AM/PM)? ",H,M,S,AMPM$
15 IF (AMPM$="PM" OR AMPM$="pm" OR AMPM$="P" OR AMPM$="p") THEN H=H+12
17 IF (AMPM$="AM" OR AMPM$="am" OR AMPM$="A" OR AMPM$="a" AND H=12) THEN H=0
20 INPUT"Enter current MONTH(1-12),DAY(1-31),YEAR(20XX) ?",MONTH,DAY,YEAR
30 IF (MONTH < 3) THEN M1=MONTH+10:YEAR=YEAR-1 ELSE M1=MONTH-2
40 Y1=YEAR/100
50 Y2=YEAR MOD 100
60 WEEKDAY = (DAY+INT(2.6*M1-0.1)+Y2+(Y2/4)+(Y1/4)-(2*Y1)+49) MOD 7
65 WEEKDAY = WEEKDAY+1
70 GOSUB 600
80 END
600 REM ------ SET CURRENT TIME TO H:M:S
610 OUT 97,0:OUT 96,142: REM CLEAR WRITE PROTECT BIT
620 OUT 97,128:OUT 96,128:REM STOP CLOCK
630 R=2:D=H:GOSUB 700 ' SET HOURS
640 R=1:D=M:GOSUB 700 ' SET MINUTES
650 R=0:D=S:GOSUB 700 ' SET SECONDS
651 R=3:D=DAY:GOSUB 700 ' SET THE DAY
652 R=4:D=MONTH:GOSUB 700 ' SET THE MONTH
653 R=5:D=WEEKDAY:GOSUB 700 ' SET THE WEEKDAY
654 R=6:D=Y2:GOSUB 700 ' SET THE YEAR
660 RETURN
700 REM ------ WRITE TO CLOCK REGISTER R
710 OUT 97,INT(D/10)*16+(D MOD 10)
720 OUT 96,128+(R AND 31)*2
730 RETURN


